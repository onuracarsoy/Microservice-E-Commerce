@model List<BasketItemDto>
<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Ürünler</h6>
        @foreach (var item in Model)
        {
            <div class="d-flex justify-content-between">
                <p>@item.ProductName</p>
                <p>@item.Quantity x @item.Price ₺</p>
            </div>
        }


    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Ara Toplam</h6>
            <h6>@ViewBag.SubTotalPrice ₺</h6>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <h6>KDV % 18</h6>
            <h6>@ViewBag.KDVAmount ₺</h6>
        </div>
        @if (ViewBag.CouponConfirmStatus == "true")
        {
            <div class="d-flex justify-content-between mb-3">
                <h6 class="text-success">İndirim</h6>
                <h6 class="text-success">@ViewBag.DiscountAmount ₺</h6>
            </div>
        }
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo</h6>
            <h6 class="font-weight-medium">60 ₺</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5> </h5>
            @if (ViewBag.CouponConfirmStatus == "true")
            {
                <h5 class="text-danger"><del>@ViewBag.KDVWithTotalPrice ₺</del></h5>
            }
        </div>
        <div class="d-flex justify-content-between mt-2">
            <h5>Ödenecek Tutar</h5>
            <h5>@ViewBag.TotalPrice ₺</h5>
        </div>

    </div>
    <br />
