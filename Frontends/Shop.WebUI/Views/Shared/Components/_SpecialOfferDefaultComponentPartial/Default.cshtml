@model List<ResultSpecialOfferDto>

<div class="col-lg-4">
    @foreach(var item in Model)
    {
        if (item.SpecialOfferStatus)
        {
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="@item.SpecialOfferImageUrl" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">@item.SpecialOfferSubTitle</h6>
                    <h3 class="text-white mb-3">@item.SpecialOfferTitle</h3>
                    <a href="" class="btn btn-primary">Fırsatı Kap!</a>
                </div>
            </div>
        }
    }


</div>