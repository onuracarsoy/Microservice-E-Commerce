@model CreateContactDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">İletişim</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form asp-controller="Contact" asp-action="Index" method="post">
                    <div class="control-group">
                        <input type="text" asp-for="ContactNameSurname" class="form-control" id="name" placeholder="Adınız Soyadınız"
                               required="required" data-validation-required-message="Lütfen adınızı soyadınızı giriniz" />
 
                    </div>
                    <br />
                    <div class="control-group">
                        <input type="text" asp-for="ContactSubject" class="form-control" id="name" placeholder="Konu"
                               required="required" data-validation-required-message="Lütfen konuyu giriniz" />
                    </div>
                    <br />
                    <div class="control-group">
                        <textarea style="height:200px" asp-for="ContactMessage" class="form-control" id="name" placeholder="Mesajınız"
                               required="required" data-validation-required-message="Lütfen mesajınızı giriniz"></textarea>
                    </div>
                    <br />
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">
                        Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
        @await Component.InvokeAsync("_ContactDetailComponentPartial")
      
    </div>
</div>

