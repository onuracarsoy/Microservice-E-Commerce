
@model GetCouponCodeDetailByCode
@{
  
    string basketConfirmRoute = ViewBag.AddressRoute;
}
<div class="col-lg-4">
    <form class="mb-30" asp-controller="ShoppingCart" asp-action="Index" method="post">
        <div class="input-group">
            <input type="text" class="form-control border-0 p-4" required asp-for="CouponCode" placeholder="Kupon Gir">
            <div class="input-group-append">
                <button class="btn btn-primary">Uygula</button>
            </div>


        </div>
        <br />
        @if (ViewBag.CouponConfirmStatus == "false")
        {
            <div class="alert alert-danger" role="alert">
                Geçersiz Kupon Kodu!
            </div>
        }
        else if (ViewBag.CouponConfirmStatus == "true")
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.CouponCode Kupon Kodu Uygulandı!
            </div>
        }

    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Ara Toplam</h6>
                <h6>@ViewBag.SubTotalPrice ₺</h6>
            </div>

            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">KDV %18</h6>
                <h6 class="font-weight-medium">@ViewBag.KDVAmount ₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Kargo</h6>
                <h6 class="font-weight-medium">Ücretsiz</h6>
            </div>
            @if (ViewBag.CouponConfirmStatus == "true")
            {
                <div class="d-flex justify-content-between">
                    <h6 class="font-weight-medium text-success">İndirim</h6>
                    <h6 class="font-weight-medium text-success"> @ViewBag.DiscountAmount ₺</h6>
                </div>
            }


        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5> </h5>
                @if (ViewBag.CouponConfirmStatus == "true")
                {
                    <h5 class="text-danger"><del>@ViewBag.KDVWithTotalPrice ₺</del></h5>
                }
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam</h5>
                <h5>@ViewBag.TotalPrice ₺</h5>
            </div>

                <a class="btn btn-block btn-primary font-weight-bold my-3 py-3" href="@basketConfirmRoute">Sepeti Onayla</a>

          


        </div>
    </div>
</div>