@{
    ViewData["Title"] = "CargoDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/cargoui/CargoStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Kargom Nerede?</span></h5>
        <div class="card">
            @if (ViewBag.IsNotShipped == "false")
            {
                <div class="card-body">
                    <p class="text-danger">Kargo Takip No : @ViewBag.OperationBarcode</p>
                    <div class="row position-relative">
                        <!-- Step 1 -->
                        <div class="col-2 step @ViewBag.StepOne ">
                            <div class="step-icon"><i class="fas fa-box"></i></div>
                            <div class="step-title">Gönderici Şubede</div>
                        </div>
                        <div class="step-line completed"></div>

                        <!-- Step 2 -->
                        <div class="col-3 step @ViewBag.StepTwo ">
                            <div class="step-icon"><i class="fas fa-truck"></i></div>
                            <div class="step-title">Yolda</div>
                        </div>
                        <div class="step-line completed"></div>

                        <!-- Step 3 -->
                        <div class="col-2 step @ViewBag.StepThree ">
                            <div class="step-icon"><i class="fas fa-warehouse"></i></div>
                            <div class="step-title">Teslimat Şubede</div>
                        </div>
                        <div class="step-line completed"></div>

                        <!-- Step 4 -->
                        <div class="col-3 step @ViewBag.StepFour ">
                            <div class="step-icon"><i class="fas fa-people-carry"></i></div>
                            <div class="step-title">Dağıtımda</div>
                        </div>
                        <div class="step-line completed"></div>

                        <!-- Step 5 -->
                        <div class="col-2 step @ViewBag.StepFive">
                            <div class="step-icon"><i class="fas fa-thumbs-up"></i></div>
                            <div class="step-title">Teslim Edildi</div>
                        </div>
                        <div class="step-line completed"></div>



                    </div>

                    <!-- Progress Bar -->
                    <div class="progress-bar-container">
                        <div class="progress-bar">
                            <div class="progress-bar-inner" style="width: 75%"></div> <!-- Dynamically set width -->
                        </div>
                    </div>
                    <br />
                    <hr />
                    <h5>Kargo Bilgileri</h5>
                    <table class="table table-light table-borderless table-hover text-center mb-0">
                        <tbody class="align-middle">
                            <tr>
                                <th class="">Firma : </th>
                                <td class="align-middle">@ViewBag.CargoCompanyName</td>
                            </tr> 
                            <tr>
                                <th class="">Şubeye Teslim Tarihi  : </th>
                                <td class="align-middle">@ViewBag.OperationDate</td>
                            </tr>
                            <tr>
                                <th class="">Tahimini Teslimat Tarihi  : </th>
                                <td class="align-middle">@ViewBag.OperationGuessDate</td>
                            </tr>
                            <tr>
                                <th class="">Gönderen : </th>
                                <td class="align-middle">@ViewBag.SenderName</td>
                            </tr>
                            <tr>
                                <th class="">Alıcı : </th>
                                <td class="align-middle">@ViewBag.ReceiverName</td>
                            </tr>
                            <tr>
                                <th class="">Alıcı Telefon No : </th>
                                <td class="align-middle">@ViewBag.ReceiverPhone</td>
                            </tr>
                            <tr>
                                <th class="">Teslimat Adresi : </th>
                                <td class="align-middle">@ViewBag.ReceiverAddress</td>
                            </tr>
                        </tbody>
                    </table>
                    @*    <p class="text-dark">Kargo Takip No : @ViewBag.OperationBarcode</p>
                    <p class="text-dark">Şubeye Teslim Tarihi : @ViewBag.OperationDate</p>
                    <p class="text-dark">Gönderen : @ViewBag.SenderName</p>
                    <p class="text-dark">Alıcı : @ViewBag.ReceiverName</p>
                    <p class="text-dark">Telefon No : xxxx</p>
                    <p class="text-dark"> Teslimat Adresi : xxxx</p> *@
                </div>
            }
            else if (ViewBag.IsNotShipped == "true")
            {
                <h3 class="text-center ">Siparişiniz Henüz Kargoya Verilmemiş.</h3>
            }
        </div>

    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/cargoui/CargoScript.js"></script>
</body>
</html>


