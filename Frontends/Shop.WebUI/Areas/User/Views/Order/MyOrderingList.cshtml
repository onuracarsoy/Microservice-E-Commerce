@model List<GetByUserIdOrderingDto>
@{
    ViewData["Title"] = "MyOrderingList";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container">
    <div class="col-lg-16 table-responsive mb-5">
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Siparişlerim</span></h5>

        <table class="table table-light table-borderless table-hover text-center mb-0">
            <tbody class="align-middle">
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td class="align-middle"> <i class="fa fa-cube fa-2x" aria-hidden="true"></i></td>
                            <td class="align-middle"> @item.OrderDate.ToShortDateString()</td>
                            <td class="align-middle"> @item.OrderTotalPrice ₺</td>

                            <td class="align-middle"> <a href="/User/Order/OrderDetail/@item.OrderingID" class="btn btn-primary"> <i class="fa fa-search" aria-hidden="true"></i> İncele</a></td>
                            @if (item.CargoDetailID is not null)
                            {
                                <td class="align-middle"> <a href="/User/Order/CargoDetail/@item.OrderingID" class="btn btn-primary"> <i class="fa fa-truck" aria-hidden="true"></i> Kargom Nerede?</a></td>
                            }
                            else
                            {
                                <td class="align-middle"> Siparişiniz Hazırlanıyor...!</td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <h1 class="text-center">Henüz Siparişiniz Bulunmuyor</h1>
                }


            </tbody>
        </table>

    </div>
</div>

