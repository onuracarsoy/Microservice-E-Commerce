


@model UpdateUserDto
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Profil Bilgilerim</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-12 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form  method="post" >
                    <div class="control-group">
                        <label>Adınız</label>
                        <input type="text" class="form-control"  asp-for="Name" placeholder="Ad"
                               required="required" data-validation-required-message="Lütfen Adınızı Giriniz." />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <label>Soyadınız</label>
                        <input type="text" class="form-control"  asp-for="Surname" placeholder="Soyad"
                               required="required" data-validation-required-message="Lütfen Soyadınızı Giriniz." />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <label>E-postanız</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="E-Posta"
                               required="required" data-validation-required-message="Lütfen E-Postanızı Giriniz." />
                        <p class="help-block text-danger"></p>
                    </div>
                    @if(ViewBag.UpdateStatus == "true"){
                        <div class="alert alert-success" role="alert">
                            Bilgileriniz başarıyla güncellendi!
                        </div>
                    }
                    else if (ViewBag.UpdateStatus == "false"){
                        <div class="alert alert-danger" role="alert">
                            Bilgileriniz güncellenirken bir hata oluştu!
                        </div>
                    }
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" >
                           Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

