@model List<GetByUserIdAddressDto>
@{
    ViewData["Title"] = "MyAddressList";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container">
    <div class="col-lg-16 table-responsive mb-5">
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Adreslerim</span></h5>

        <table class="table table-light table-borderless table-hover text-center mb-0">
            <tbody class="align-middle">

                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle"> <i class="fa fa-map-marker" aria-hidden="true"></i> </td>
                            <td class="align-middle"> @item.Name @item.Surname</td>
                            <td class="align-middle"> @item.Phone</td>
                            <td class="align-middle"> @item.AddressCity , @item.AddressDistrict</td>
                            <td class="align-middle"> @item.AddressDetail</td>
                            <td class="align-middle">
                                <a href="/User/Address/UpdateAddress/@item.AddressID" class="btn btn-warning">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                            </td>
                            <td class="align-middle">
                                <a href="/User/Address/RemoveAddress/@item.AddressID" class="btn btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <h1 class="text-center">Henüz Adresiniz Bulunmuyor</h1>
                }


            </tbody>
        </table>

    </div>
    <a href="/User/Address/AddAddress" class="btn btn-primary">Yeni Adres Ekle</a>
</div>
